{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Template para criar EC2 com Apache Web Server",
  "Resources": {
    "WebServer": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "InstanceType": "t2.micro",
        "ImageId": "ami-0ed9277fb7eb570c9",
        "AvailabilityZone": "us-east-1a",
        "SecurityGroups": [
          {
            "Ref": "WebServerSecurityGroup"
          }
        ],
        "Tags": [
          {
            "Key": "Infraestrutura_Automatizada",
            "Value": "Servidor-Teste"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Sub": "#!/bin/bash -xe\nyum install -y httpd.x86_64\nsystemctl start httpd.service\nsystemctl enable httpd.service\necho \"<h1>Bem-Vindo Ã  AWS do $(hostname -f)</h1>\" > /var/www/html/index.html"
          }
        }
      }
    },
    "WebServerSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Security group for web server Porta 80",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 80,
            "ToPort": 80,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    }
  }
}